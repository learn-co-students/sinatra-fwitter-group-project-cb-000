<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<h1>Edit Your Tweet</h1>
<form action='/tweets/<%= @tweet.id %>/edit' method='POST'>
  <p>
    <textarea rows='5' cols='50' name='tweet[content]' id='content'>
      <%= @tweet.content %>
    </textarea>
  </p>
  <p>
    <input type='hidden' name='_method' id='hidden' value='PATCH'/>
    <input type='submit' value='Edit Tweet'/>
  </p>
</form>
