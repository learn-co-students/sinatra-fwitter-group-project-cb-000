<div class="col-md-6 col-md-offset-3">

  <h1>Edit Tweet</h1>
  <form action="/tweets/<%= @tweet.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <textarea name="content" rows="8" cols="80" required><%= @tweet.content %></textarea>
    <input class="btn btn-lg btn-primary" type="submit" name="submit" value="Submit" id="submit">
  </form>

</div>
