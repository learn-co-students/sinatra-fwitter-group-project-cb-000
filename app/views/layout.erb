<!doctype html>
<html>
  <head>
    <title>Fwitter</title>
  </head>
  <body>

    <div class="container">
      <h1>Welcome to Fwitter</h1>

      <% if logged_in? %>
        <h2>Welcome, <%= current_user.username%></h2>
      <% end %>

      <% if flash.has?(:m) %>
        <hr>
        <%= flash[:m] %>
        <hr>
      <% end %>

      <%= yield %>
    </div>

  </body>
</html>
