<h1><%= @user.username %></h1>

<% if @user.tweets == [] %>
  <h2>You don't have any tweets!</h2>
<% else %>
  <% @user.tweets.each do |tweet| %>
    <div style="border-style: solid; color: black;">
      <h3><%= tweet.content %></h3>
      <form method="GET" action="/tweets/<%= tweet.id %>/edit">
        <input type="submit" value="Edit Tweet">
      </form>
      <form method="POST" action="/tweets/<%= tweet.id %>/delete">
        <input type="hidden" value="delete" name="_method">
        <input type="submit" value="Delete Tweet">
      </form>

      <form method="GET" action="/tweets/<%= tweet.id %>">
        <input type="submit" value="Go To Tweet">
      </form>

    </div>
    <br>
  <% end %>
<% end %>
<br>

<form method="GET" action="/tweets">
  <input type="submit" value="Go back to Home">
</form>
