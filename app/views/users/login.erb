<h1>Fwitter</h1>
<h3>Log In</h3>
<% if flash.has?(:message) %>
  <hr>
  <p><strong><%=flash[:message]%></strong></p>
  <hr>
<% end %>
<form action="/login" method="post">
  <p><label for="user_username">Username:</label><input id="user_username" type="text" name="user[username]" required></p>
  <p><label for="user_password">Password:</label><input id="user_password" type="password" name="user[password]" required></p>
  <input type="submit" value="Log In">
</form>
